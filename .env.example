# ARCHER Environment Configuration
# Copy this file to .env and customize for your system
# IMPORTANT: Set proper permissions on .env to protect any sensitive data
# chmod 600 .env

# Project Paths
PROJECT_ROOT=/home/sean/ARCHER

# Bounded Contexts
INTAKE_CONTEXT_PATH=/home/sean/ARCHER/archer/contexts/intake
TARGETING_CONTEXT_PATH=/home/sean/ARCHER/archer/contexts/targeting
TEMPLATING_CONTEXT_PATH=/home/sean/ARCHER/archer/contexts/templating
RENDERING_CONTEXT_PATH=/home/sean/ARCHER/archer/contexts/rendering

# Tracking
OUTS_PATH=/home/sean/ARCHER/outs
LOGS_PATH=/home/sean/ARCHER/outs/logs
RESULTS_PATH=/home/sean/ARCHER/outs/results
RESUME_REGISTRY=/home/sean/ARCHER/outs/logs/resume_registry.csv

# Data Paths
DATA_PATH=/home/sean/ARCHER/data
RESUME_ARCHIVE_PATH=/home/sean/ARCHER/data/resume_archive
RAW_ARCHIVE_PATH=/home/sean/ARCHER/data/resume_archive/raw
STRUCTURED_ARCHIVE_PATH=/home/sean/ARCHER/data/resume_archive/structured
RESUME_DATABASE_PATH=/home/sean/ARCHER/data/resume_archive/structured/database/resumes.db
FIGS_PATH=/home/sean/ARCHER/data/figs

# Templating Context Sub-paths
RESUME_COMPONENT_TYPES_PATH=/home/sean/ARCHER/archer/contexts/templating/template/types

# LaTeX Configuration for ARCHER, used by rendering context
MYSTYLE_PATH=/home/sean/ARCHER/archer/contexts/rendering/mystyle
TEXINPUTS=/home/sean/ARCHER/archer/contexts/rendering:
LATEX_COMPILER=pdflatex
## Keep LaTeX intermediate files (.aux, .log, etc.) for debugging?
KEEP_LATEX_ARTIFACTS=false

# Directory for generated resumes
RESUME_OUT_PATH=/home/sean/ARCHER/outs/resumes

